{
  "typeAcquisition": {
      "enable": false,
      "exclude": ["node"]
  },
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "lib": [
        "DOM",
        "DOM.Iterable",
        "ES2018",
    ],
    "typeRoots": [
        "./node_modules/@types/"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}